<h1>Authors</h1>

<table>
  <tr>
    <th>
      Name
    </th>
    <th>
      Homepage
    </th>
    <th>
      Actions
    </th>
  </tr>
  <% @authors.each do |author| %>
    <tr id= <%= "author" + String(author.id) %> >
      <td>
        <%= link_to author.name, author %>
      </td>
      <td>
        <%= link_to author.homepage, "https://" + author.homepage %>
      </td>
      <td>
        <%= link_to "Edit", edit_author_path(author.id) %>
        <%= link_to "Delete", author_path(author), method: :delete %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "New", new_author_path %>

